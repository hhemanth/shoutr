<h1>Dashboard</h1>
<%= form_for @shout do |form| %>
  <%=form.text_field :content_type, hidden:true, value:'TextShout' %>
  <%= form.fields_for :content do |content_form| %>
    <%= content_form.text_field :body, placeholder: 'Shout Here', required: true  %>
  <% end  %>
  <%= form.submit 'Shout' %>
<% end %>

<%= form_for @shout do |form| %>
  <%=form.text_field :content_type, hidden:true, value:'PhotoShout' %>
  <%= form.fields_for :content do |content_form| %>
    <%= content_form.file_field :image, required: true  %>
  <% end  %>
  <%= form.submit 'Shout' %>
<% end %>


<br>
<%= render @shouts %>
